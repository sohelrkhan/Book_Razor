@page
@model Books_Razor.Pages.BookList.IndexModel


    <h2>Book List</h2>
    <br />
    <br />
    @if (Model.Message != null)
    {
        <div class="alert alert-info alert-dismissable" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-level="close">
                <span aria-hidden="true">&times;</span>
            </button>
            @Model.Message
        </div>
    }

    <a asp-page="Create" class="btn btn-default btn-group-sm">Create New Book</a>

    <br />
    <br />
    <form method="post">
        @if (Model.Books.Count() > 0)
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                    </th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.Books)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(m => item.ISBN)
                </td>
                <td>
                    <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btm-sm">Delete</button>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary btm-sm">Edit</a>

                </td>
            </tr>
                }
            </table>
        }

        else
        {
            <div>No Books is Available!</div>

        }
    </form>
